<dom-module id="shared-styles">
  <template>
    <style>
      :root {
        --horizontal-section-container: {
          @apply(--layout-center-justified);
          @apply(--layout-horizontal);
          @apply(--layout-wrap);
        };

        --horizontal-section: {
          @apply(--shadow-elevation-2dp);

          margin-right: 24px;
          min-width: 200px;
          padding: 24px;
        };

        --horizontal-section-no-shadow: {
          margin-right: 24px;
          min-width: 200px;
          padding: 24px;
        };

        --vertical-section-container: {
          @apply(--center-justified);
          @apply(--layout-vertical);
        };

        --vertical-section: {
          @apply(--shadow-elevation-2dp);

          margin: 0 24px 24px 24px;
          padding: 24px;
        };

        --vertical-section-no-shadow: {
          margin: 0 24px 24px 24px;
          padding: 24px;
        };
      }

      .horizontal-section-container {
        @apply(--layout-center-justified);
        @apply(--layout-horizontal);
        @apply(--layout-wrap);
      }

      .horizontal-section {
        @apply(--shadow-elevation-2dp);

        margin-right: 24px;
        min-width: 200px;
        padding: 24px;
      }

      .horizontal-section-no-shadow {
        margin-right: 24px;
        min-width: 200px;
        padding: 24px;
      }

      .vertical-section-container {
        @apply(--center-justified);
        @apply(--layout-vertical);
      }

      .vertical-section {
        @apply(--shadow-elevation-2dp);

        margin: 0 24px 24px 24px;
        padding: 24px;
      }

      .vertical-section-no-shadow {
        @apply(--shadow-elevation-2dp);

        margin: 0 24px 24px 24px;
        padding: 24px;
      }

      .main-header {
        background-color: var(--paper-grey-100);
        border-bottom: 1px solid var(--paper-grey-300);
      }

      .main-toolbar {
        margin: 0 auto;
        max-width: 948px;
      }
      @media (min-width: 840px) {
        .main-toolbar {
          left: 0;
        }
      }

      .main-logo {
        background: url({{ assetPath "images/logo.png" }}) center center /contain no-repeat;
        height: 35px;
        width: 175px;
      }
      @media (-webkit-min-device-pixel-ratio:2) and (min-resolution: 192dpi) {
        .main-logo {
          background: url({{ assetPath "images/logo@2x.png" }}) center center /contain no-repeat;
        }
      }

      @media not all and (min-width: 840px) {
        .main-menubar-wide-only {
          display: none !important;
        }
      }

      @media (min-width: 840px) {
        .main-menubar-tab {
          @apply(--paper-font-common-base);

          color: var(--paper-grey-800);
          font-size: 18px;
          font-weight: 500;
          margin: 0 16px;
          padding: 12px 8px;
        }
      }

      .main-menu-icon-layout {
        position: absolute;
        right: 16px;
        top: 16px;
      }

      .main-menu-icon {
        background: var(--paper-grey-600);
        border-radius: 4px;
        border: 1px solid var(--paper-grey-700);
        color: #fff;
        height: 24px!important;
        padding: 4px 4px;
        width: 24px!important;
      }

      @media (min-width: 840px) {
        .main-menu-icon-narrow-only {
          display: none !important;
        }
      }

      .side-nav {
        background-color: var(--paper-grey-100);
        padding: 56px 24px 24px;
      }

      .side-nav-menu-item {
        @apply(--paper-font-common-base);

        border-bottom: 1px solid var(--paper-grey-300);
        color: var(--paper-grey-800);
        display: block;
        font-size: 18px;
        font-weight: 500;
        margin-bottom: 24px;
        padding: 8px 0;
      }
    </style>
  </template>
</dom-module>
